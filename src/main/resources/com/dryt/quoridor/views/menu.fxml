            fx:controller="com.dryt.quoridor.controller.ControleurMenu">
    <children>
        <VBox alignment="CENTER" spacing="20.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <children>
                <Button text="Jouer" onAction="#onJouer" />
                <Button text="Options" onAction="#onOptions" />
                <Button text="Quitter" onAction="#onQuitter" />
            </children>
        </VBox>
    </children>
</AnchorPane>
