<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dryt.quoridor.controller.ControleurChoixDifficulteIA" styleClass="menu-background">
    <VBox spacing="50" alignment="CENTER">
        <Text text="CHOIX DE LA DIFFICULTÉ" styleClass="title-text"/>
        
        <VBox spacing="30" alignment="CENTER" styleClass="menu-buttons">
            <Text text="Choisissez la difficulté de l'IA" styleClass="menu-label"/>
            
            <VBox spacing="20" alignment="CENTER">
                <Button text="FACILE" onAction="#onFacile" styleClass="menu-button"/>
                <Button text="MOYEN" onAction="#onMoyen" styleClass="menu-button"/>
                <Button text="DIFFICILE" onAction="#onDifficile" styleClass="menu-button"/>
            </VBox>

            <HBox spacing="30" alignment="CENTER">
                <Button text="RETOUR" onAction="#onRetour" styleClass="back-button"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane> 